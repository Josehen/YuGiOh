<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/download"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">

        <ImageButton
            android:id="@+id/buttonar1"
            android:layout_width="213dp"
            android:layout_height="286dp"
            android:layout_marginTop="128dp"
            android:background="@drawable/amajorupset"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="@+id/textView3" />

        <ImageButton
            android:id="@+id/buttonar2"
            android:layout_width="213dp"
            android:layout_height="286dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/antimagicprism"
            app:layout_constraintEnd_toEndOf="@+id/buttonar1"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/buttonar1"
            app:layout_constraintTop_toTopOf="@+id/buttonar1" />

        <ImageButton
            android:id="@+id/buttonar3"
            android:layout_width="213dp"
            android:layout_height="286dp"
            android:layout_marginTop="328dp"
            android:background="@drawable/backupsoldier"
            app:layout_constraintEnd_toEndOf="@+id/buttonar2"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/buttonar2"
            app:layout_constraintTop_toTopOf="@+id/buttonar2" />

        <ImageButton
            android:id="@+id/buttonar4"
            android:layout_width="213dp"
            android:layout_height="286dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/ninjitsuartoffreezing"
            app:layout_constraintEnd_toEndOf="@+id/buttonar3"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/buttonar3"
            app:layout_constraintTop_toTopOf="@+id/buttonar3" />

        <ImageButton
            android:id="@+id/buttonar5"
            android:layout_width="213dp"
            android:layout_height="286dp"
            android:layout_marginTop="320dp"
            android:background="@drawable/dusttornado"
            app:layout_constraintEnd_toEndOf="@+id/buttonar4"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="@+id/buttonar4"
            app:layout_constraintTop_toTopOf="@+id/buttonar4" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="377dp"
            android:layout_height="97dp"
            android:background="#45424242"
            android:gravity="center"
            android:text="ARMADILHAS"
            android:textColor="#FFFFFF"
            android:textSize="48sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.47"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.005" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>